<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/buttonCard"
        style="@style/botones"
        android:layout_marginTop="60dp"
        android:background="@drawable/boton"
        android:onClick="cardPayment"
        android:text="@string/card"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCard"
        android:layout_marginTop="49dp"
        android:layout_marginStart="30dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameBox"
                style="@style/cajasTextos"
                android:hint="@string/name"
                android:visibility="visible">

                <requestFocus />

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/numberCard"
                style="@style/cajasTextos"
                android:hint="@string/number_card" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="210dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dateBox"
                style="@style/cajasTextos"
                android:hint="@string/expiry_date" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/csvBox"
                style="@style/cajasTextos"
                android:hint="@string/csv"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonCash"
        style="@style/botones"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="49dp"
        android:background="@drawable/boton"
        android:onClick="cashPayment"
        android:text="@string/cash"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/cashText"
        style="@style/etiquetas"
        android:layout_below="@id/buttonCash"
        android:layout_marginTop="49dp"
        android:text="import"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buttonPay"
        style="@style/botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:background="@drawable/boton03"
        android:text="@string/pay"
        android:textColor="@color/colorPrimary" />
</RelativeLayout>